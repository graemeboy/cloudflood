  <div id="campaign-list">
    <h1>Your Campaigns</h1>
    
    <div class="container">
     <div class="col-sm-8">
    <% for(var i=0; i<campaigns.length; i++) {%>
      <div class="dashboard-campaign">
        <h3>
          <a class="dashboard-campaign-name" href="/dashboard/<%= campaigns[i]['_id'] %>"><%= campaigns[i].name %></a>
        </h3>
